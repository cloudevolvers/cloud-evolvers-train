{
  "name": "xevolve-azure-insights",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon --watch app.js app.js",
    "build": "next build --no-lint",
    "build:standalone": "NODE_ENV=production next build --no-lint",
    "start": "NODE_ENV=production node app.js",
    "start:standalone": "NODE_ENV=production node server.js",
    "startAzure": "NODE_ENV=production node app.js",
    "lint": "eslint --config eslint.config.cjs .",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:unit": "jest --config jest.config.cjs tests/unit",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:language": "playwright test tests/e2e/english-homepage.spec.ts",
    "test:language:headed": "playwright test tests/e2e/english-homepage.spec.ts --headed",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:build": "./scripts/test-build-local.sh",
    "test:cucumber": "node cucumber/run-tests.cjs",
    "test:cucumber:watch": "node cucumber/run-tests.cjs --watch",
    "test:cucumber:format": "node cucumber/run-tests.cjs --format html:cucumber/reports/cucumber-report.html",
    "test:dutch": "npx cucumber-js --config cucumber/cucumber.config.cjs --tags '@dutch'",
    "test:localization": "npx cucumber-js --config cucumber/cucumber.config.cjs --tags '@localization'",
    "validate:translations": "node scripts/validate-cloud-evolvers-translations.js",
    "check:translations": "node scripts/validate-cloud-evolvers-translations.js",
    "fix:translations": "node scripts/fix-cloud-evolvers-translations.js",
    "migrate-blog": "node scripts/migrate-blogs.mjs",
    "migrate:blogs": "node scripts/migrate-blogs.mjs",
    "sync:blog-languages": "node scripts/sync-blog-languages.js",
    "translate:blogs": "node scripts/translate-all-blogs.js",
    "deploy:dta": "./scripts/deploy-dta.sh",
    "deploy:dta:rebuild": "./scripts/deploy-dta.sh --rebuild",
    "deploy:dta:redeploy": "./scripts/deploy-dta.sh --redeploy",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "deploy:prod:rebuild": "./scripts/deploy-prod.sh --rebuild",
    "deploy:prod:redeploy": "./scripts/deploy-prod.sh --redeploy"
  },
