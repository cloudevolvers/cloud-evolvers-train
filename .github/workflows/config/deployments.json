    "secrets": {
      "required": [
        "AZURE_CLIENT_SECRET"
      ],
      "optional": [
        "BACKUP_AZURE_CLIENT_ID",
        "BACKUP_AZURE_CLIENT_SECRET", 
        "BACKUP_AZURE_SUBSCRIPTION_ID",
        "BACKUP_AZURE_TENANT_ID"
      ]
    },
