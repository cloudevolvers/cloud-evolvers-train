# Cloud Evolvers Environment Configuration for GitHub Actions Deployment
# üéØ SINGLE SOURCE OF TRUTH - All environment variables are defined here
# This file contains environment variables for the Cloud Evolvers Azure Web App deployment

# Contact Information - Cloud Evolvers Specific
NEXT_PUBLIC_CONTACT_EMAIL=training@cloudevolvers.com
NEXT_PUBLIC_CONTACT_PHONE=06-34272027
NEXT_PUBLIC_PRIVACY_EMAIL=privacy@cloudevolvers.com
NOTIFICATION_EMAIL=training@cloudevolvers.com
TRAINING_INQUIRY_EMAIL=training@cloudevolvers.com
EMAIL_SENDER=internalautomation@xevolve.io

# API Keys - Non-sensitive identifiers
UNSPLASH_APPLICATION_ID=727902

# Microsoft Graph API Configuration for Email Integration (Vite Variables)
# üîë Uses CI/CD Service Principal - GitHub Organization Secrets
VITE_AZURE_AD_CLIENT_ID=@GitHubActions=AZURE_AD_CLIENT_ID
VITE_AZURE_AD_TENANT_ID=@GitHubActions=AZURE_AD_TENANT_ID

# Email Configuration for Training Forms
VITE_EMAIL_SENDER=internalautomation@xevolve.io
VITE_EMAIL_RECIPIENT=yair@cloudevolvers.com
VITE_EMAIL_REPLY_TO_RECIPIENT=training@cloudevolvers.com

# üîê SECRETS - Automatically loaded from GitHub Secrets
# Syntax: @GitHubActions=SECRET_NAME
UNSPLASH_ACCESS_KEY=@GitHubActions=UNSPLASH_ACCESS_KEY
UNSPLASH_SECRET_KEY=@GitHubActions=UNSPLASH_SECRET_KEY
PEXELS_API_KEY=@GitHubActions=PEXELS_API_KEY
PIXABAY_API_KEY=@GitHubActions=PIXABAY_API_KEY
ADMIN_PASSWORD=@GitHubActions=ADMIN_PASSWORD
VITE_AZURE_AD_CLIENT_SECRET=@GitHubActions=VITE_AZURE_AD_CLIENT_SECRET

# üîê API SECRETS - For Azure Functions API
EMAIL_AZURE_TENANT_ID=@GitHubActions=EMAIL_AZURE_TENANT_ID
EMAIL_AZURE_CLIENT_ID=@GitHubActions=EMAIL_AZURE_CLIENT_ID
EMAIL_AZURE_CLIENT_SECRET=@GitHubActions=EMAIL_AZURE_CLIENT_SECRET

# API Key
API_KEY=@GitHubActions=API_KEY

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=@GitHubActions=APPLICATIONINSIGHTS_CONNECTION_STRING

# Azure AD Configuration
AZURE_AD_CLIENT_ID=@GitHubActions=AZURE_AD_CLIENT_ID
AZURE_AD_CLIENT_SECRET=@GitHubActions=AZURE_AD_CLIENT_SECRET
AZURE_AD_TENANT_ID=@GitHubActions=AZURE_AD_TENANT_ID

# Azure Static Web Apps Configuration
AZURE_STATIC_WEB_APPS_STAGING_ENVIRONMENT_POLICY=Enabled

# Azure Storage Account
AZURE_STORAGE_ACCOUNT=@GitHubActions=AZURE_STORAGE_ACCOUNT

# Pricing Admin
PRICING_ADMIN_KEY=@GitHubActions=PRICING_ADMIN_KEY

# Vite Configuration
VITE_API_KEY=@GitHubActions=API_KEY

# Environment Configuration
NODE_ENV=production
VITE_ENVIRONMENT=production
VITE_SHOW_CONSTRUCTION_BANNER=false

# Azure Blob Storage Configuration
BLOB_STORAGE_NAME=images
AZURE_STORAGE_ACCOUNT_NAME=@GitHubActions=AZURE_STORAGE_ACCOUNT_NAME
